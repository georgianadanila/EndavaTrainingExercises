package com.endava.shape;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Shape rectangle = new Rectangle(10, 3);
		Shape circle = new Circle(5);
		Shape triangle = new Triangle(4, 12);
		ShapeTest test = new ShapeTest();
		
		rectangle.helloWorld();
		circle.helloWorld();
		triangle.helloWorld();
		
		System.out.println("Rectangle area= " + test.computeShapeArea(rectangle));
		System.out.println("Circle area= " +test.computeShapeArea(circle));
		System.out.println("Triangle area= " + test.computeShapeArea(triangle));
		
	}

}
